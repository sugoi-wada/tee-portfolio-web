{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["github>sugoi-wada/renovate-config"],
  "packageRules": [
    {
      "matchPackageNames": ["node", "@types/node"],
      "matchUpdateTypes": ["major"],
      "enabled": false
    },
    {
      "groupName": "react",
      "matchPackagePatterns": [
        "^@types/react$",
        "^@types/react-dom$",
        "^react-dom$",
        "^react$"
      ]
    },
    {
      "groupName": "radix-ui",
      "matchPackagePatterns": ["^@radix-ui"]
    }
  ]
}
